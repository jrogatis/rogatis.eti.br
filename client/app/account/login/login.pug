.container
  .row
    .col-sm-12
      h1 Login

    .col-sm-12
      form.form(name='loginForm', ng-submit='vm.login(loginForm)',
      ng-controler='loginControler')
        .form-group
          label Email
          input.form-control(type='email', name='email', 
            ng-model='vm.user.email', required="Please provide your email")
        .form-group
          label Password
          input.form-control(type='password', name='password', 
            ng-model='vm.user.password',  required="Please provide your pass")
        .form-group.has-error
          p.help-block(ng-show='loginForm.email.$error.required && loginForm.password.$error.required && vm.submitted')
            | Please enter your email and password.
          p.help-block {{ vm.errors.login }}
        div
          button.btn.btn-inverse.btn-lg.btn-login(type='submit')
            | Login
          = ' '
          a.btn.btn-default.btn-lg.btn-register(href='/signup')
            | Register
        hr
        .row
          .col-sm-4.col-md-3
            oauth-buttons(classes='btn-block')

  hr
