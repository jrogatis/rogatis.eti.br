div#mainGallery
  .container(layout="column" flex="100")
      div#uploadImage(flex="100", layout="column")
        h1 New Image ?
        div#imageForm(flex layout="row")
          md-input-container(flex = "40").md-padding
            label Title
            input(ng-model="$ctrl.image.title")
          div#drop(flex="20" layout="row").md-padding
            div.drop-box(ngf-drop="$ctrl.onFileSelect($file)" ngf-drag-over-class="'dragover'" ngf-multiple="true" ngf-pattern="'image/*,application/pdf'")
              span Drop Images or PDFs files here
            div( ngf-no-file-drop) File Drag/Drop is not supported for this browser
        div(flex)
          md-progress-linear(ng-show="$ctrl.determinateValue" md-mode="determinate" ng-value="$ctrl.determinateValue")

      md-divider.md-padding
      h1 Gallery
      div#gallery(layout="column", flex="100").animated.bounceIn
        ul.dynamic-grid(angular-grid="$ctrl.listImages" ag-grid-width="150" ag-gutter-size="10" ag-id="gallery" ag-refresh-on-img-load="true")
          li.grid(data-ng-repeat="pic in $ctrl.listImages")
            div.show-image
              img.grid-img(src="https://s3.amazonaws.com/rogatis/{{pic}}" data-actual-width = "150"  data-actual-height="150")
              md-button.md-icon-button.md-accent(aria-label="Favorite")
                md-icon.fa.fa-trash



