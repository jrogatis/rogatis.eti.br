div#aboutMain
  .container
    div#aboutMe(flex="100"
      layout="column" 
      layout-gt-sm="row"
      layout-align="center center"
      )
      div#text(flex="100" flex-gt-sm="50" layout="column")
        h1 about me
        h2 Im a Full Stack Engineer  <br /> from SÃ£o Paulo, Brazil
        div#innerText
          p. 
            I enjoy turning complex problems into simple, 
            beautiful and intuitive systems. 
            When I'm not coding or pushing pixels, 
            you'll find me in the skies or at running course.
      div#aboutImage(flex="100" flex-gt-sm="50" layout="column")
        md-grid-list(
          md-cols="1"
          md-row-height="4:3"
          md-gutter-gt-sd="25px"  md-gutter="4px")
          md-grid-tile
            md-card
              img(ng-src="../../assets/images/picsAbout9100.jpg")   
    div#pics(flex="row")
      md-grid-list( flex
          md-cols-gt-xs="8" md-cols="2" 
          md-row-height="4:3"
          md-gutter-gt-sd="25px"  md-gutter="4px")
          md-grid-tile(ng-repeat="pics in $ctrl.listPics")
            md-card
              img(ng-src="{{pics.imgUrl}}") 
    div#randomFacts(flex layout="column" layout-gt-sm="row" )
      div#factsPic(flex = "50")
         md-grid-list(
          md-cols="1"
          md-row-height="4:3"
          md-gutter-gt-sd="25px"  md-gutter="4px")
          md-grid-tile
            md-card
              img(ng-src="../../assets/images/yoda.jpg")   
      div#factsText(
        flex = "50" 
        layout="column" 
        layout-align="center center")
        md-list
          md-list-item 
            span I love Star Wars and got a colection of 500 action figures.
          md-list-item 
            span Skydive is my new passion, 1000 jumps in 3 years.
          md-list-item 
            span I love special coffee beans
          md-list-item 
            span I want to be a super mutant
          md-list-item 
            span I use mac

    div#skills(flex="100" layout ="column")
      nvd3#skillsGraph(flex="100" 
        options='$ctrl.graphOptions'
        api="$ctrl.api" 
        data='$ctrl.data'
        events="$ctrl.graphEvents"
      )

    

    






